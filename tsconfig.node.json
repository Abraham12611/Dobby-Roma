{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": true
  }
}